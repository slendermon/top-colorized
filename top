#$7 ~ /shrd/{sub(/K/, "", $6); val=$6/1024^2; $6=sprintf("%.2f GB", val)} \
#$9 ~ /buff/{sub(/K/, "", $8); val=$8/1024^2; $8=sprintf("%.2f GB", val)} \
